---
import { ViewTransitions } from "astro:transitions";
import "../styles/style.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body class="bg-slate-800 text-slate-100 m-auto max-w-5xl">
        <main class="my-10">
            <slot />
        </main>
    </body>
</html>
