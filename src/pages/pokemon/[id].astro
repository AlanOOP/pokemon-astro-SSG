---
import PokemonCard from "@components/pokemon/PokemonCard.astro";
import type { PokemonListResponse } from "../../interfaces/pokemon-list.reponse";
import MainLayout from "../../layouts/MainLayout.astro";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async () => {
    const response = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");

    const data = (await response.json()) as PokemonListResponse;

    return data.results.map(({ name, url }) => {
        const id = url.split("/")[url.split("/").length - 2];

        return {
            params: { id: id },
            props: { name, url },
        };
    });
}) satisfies GetStaticPaths;

const { id } = Astro.params;
const { name, url } = Astro.props;

---

<MainLayout title={id}>
    <a href="/" class="text-xl text-center text-blue-600 my-2">Regresar</a>

    <h1 class="text-3xl capitalize">{name}</h1>
    <hr />

    <section class="flex justify-center my-5">
        <div class="bg-slate-900 p-4 rounded-lg shadow-lg">
            <PokemonCard
                name={name}
                url={url}
                isBig
            />
            <div class="w-full flex justify-center">
                <audio controls>
                    <source src={`https://raw.githubusercontent.com/PokeAPI/cries/main/cries/pokemon/latest/${id}.ogg`} type="audio/ogg" />
                    Your browser does not support the audio element.
                </audio>
            </div>
        </div>
    </section>
</MainLayout>
